#!/bin/sh
## List of my aliases

alias nvim_edit="nvim /home/gena/.config/nvim/init.lua"

alias zsh_edit="nvim /home/gena/.config/zsh/.zshrc"
alias zsh_reload="source /home/gena/.config/zsh/.zshrc;
					source /home/gena/.config/zsh/.zprofile"

alias zprof_edit="nvim /home/gena/.config/zsh/.zprofile"
alias alias_edit="nvim /home/gena/.config/aliasrc"
alias hypr_edit="nvim /home/gena/.config/hypr/hyprland.conf"

[colors]
;background =	 #00fff000
background-alt = #1D252C00

background = #282828

;foreground = #8086e8
;foreground-alt = #696ebf

;foreground = 		#e52b50
;foreground-alt = 	#98971a

foreground = 		#fbf1c7
foreground-alt = 	#f2e5bc

primary = #81a1c1
secondary = #88C0D0
alert = #BF616A

[bar/bara]
monitor = DP-0
width = 100%
height = 20
offset-y = -20
radius = 0
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 0

border-size = 4
border-color = #00000000

padding-left = 1
padding-right = 1


module-margin-left = 2
module-margin-right = 2

font-0 = "JetBrainsMono Nerd Font:size=12:weight=medium;0"

enable-ipc = true

modules-left = i3
modules-center 	= previous playpause spotify next
modules-right 	= xkeyboard alsa date

tray-position 	= none
tray-padding 	= 0 


cursor-click 	= pointer
cursor-scroll 	= ns-resize

[module/xwindow]
type 		= internal/xwindow
label 		= %title:0:30:...%

[module/xkeyboard]
type 				= internal/xkeyboard
blacklist-0 			= num lock
format-prefix-underline 	= ${colors.foreground}

[module/playpause]
type 		= custom/ipc
format-font 	= 2
hook-0 		= echo ""
hook-1 		= echo "+"
hook-2 		= echo "||"
click-left 	= "spotifyctl -q playpause"


[module/next]
type 		= custom/ipc
format-font 	= 2
hook-0 		= echo ""
hook-1		= echo ">>"
click-left 	= "spotifyctl -q next"

[module/previous]
type 		= custom/ipc
format-font 	= 2
hook-0 		= echo ""
hook-1 		= echo "<<"
click-left 	= "spotifyctl -q previous"

[module/spotify]
type 		= custom/ipc
hook-0 		= echo ""
hook-1 		= spotifyctl -q status --format '%artist%: %title%'

[module/i3]
type 		= internal/i3
format 		= <label-state> <label-mode>
index-sort 	= true
wrapping-scroll = false

;Only show workspaces on the same output as the bar
;pin-workspaces = true

label-mode-padding 	= 1
label-mode-foreground	= #2E3440
label-mode-background 	= ${colors.primary}

focused = Active workspace on focused monitor
label-focused = %index%
label-focused-background 	= #00fff
label-focused-foreground 	= ${colors.foreground}
label-focused-underline		= #00000000
label-focused-padding 		= 2

unfocused 		= Inactive workspace on any monitor
label-unfocused 	= %index%
label-unfocused-padding = 2

visible = Active workspace on unfocused monitor
label-visible = %index%
label-visible-background = ${self.label-focused-background}
label-visible-underline = ${self.label-focused-underline}
label-visible-padding = ${self.label-focused-padding}

; urgent = Workspace with urgency hint set
label-urgent = %index%
label-urgent-background = ${colors.alert}
label-urgent-padding = 2

[module/cpu]
type = internal/cpu
interval = 2
;format-prefix =
format-prefix-foreground = ${colors.foreground-alt}
;format-underline = ${colors.foreground}
label = %percentage:2%%

[module/date]
type = internal/date
interval = 5

date = %d-%m-%Y
date-alt = " %d-%m-%Y"

time = %H:%M
time-alt = %H:%M

format-prefix =
format-prefix-foreground = ${colors.foreground-alt}

label = %date% %time%


[module/alsa]
type = internal/pulseaudio

format-volume = <label-volume> <bar-volume>
label-volume = vol
label-volume-foreground = ${root.foreground}

format-muted-prefix = "X "
format-muted-foreground = ${root.foreground}
label-muted = X

bar-volume-width = 10
bar-volume-foreground-0 = #98971a
bar-volume-foreground-1 = #98971a
bar-volume-foreground-2 = #98971a
bar-volume-foreground-3 = #98971a
bar-volume-foreground-4 = #98971a
bar-volume-foreground-5 = #98971a
bar-volume-foreground-6 = #98971a
bar-volume-gradient = false
bar-volume-indicator = |
bar-volume-indicator-font = 2
bar-volume-fill = -
bar-volume-fill-font = 2
bar-volume-empty = -
bar-volume-empty-font = 2
bar-volume-empty-foreground = ${colors.foreground-alt}

[settings]
screenchange-reload = true


[global/wm]
margin-top = 0
margin-bottom =
